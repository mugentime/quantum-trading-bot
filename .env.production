# Production Environment Configuration for Railway
# ================================================
# CRITICAL: Set these variables in Railway dashboard under "Variables"

# === BINANCE API CONFIGURATION ===
# REQUIRED: Your actual Binance API keys
BINANCE_API_KEY=YOUR_BINANCE_API_KEY_HERE
BINANCE_SECRET_KEY=YOUR_BINANCE_SECRET_KEY_HERE
BINANCE_TESTNET=false

# === TRADING CONFIGURATION (OPTIMIZED FOR 14% DAILY TARGET) ===
# Position sizing and risk management
RISK_PER_TRADE=0.15
MAX_CONCURRENT_POSITIONS=1
DEFAULT_LEVERAGE=8.5
MAX_LEVERAGE=10
MIN_LEVERAGE=8

# Stop loss and take profit settings
STOP_LOSS_PERCENT=0.012
TAKE_PROFIT_RATIO=1.5

# === PRODUCTION ENVIRONMENT ===
ENVIRONMENT=production
DEBUG=false
PYTHONUNBUFFERED=1
PYTHONPATH=.
LOG_LEVEL=INFO

# === RAILWAY SPECIFIC ===
PORT=8080
HEALTH_CHECK_PORT=8080
TZ=UTC

# === OPTIONAL: MONITORING & ALERTS ===
# Telegram notifications (recommended for production monitoring)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# === OPTIONAL: DATABASE ===
# Redis for advanced caching (optional)
REDIS_HOST=redis.railway.internal
REDIS_PORT=6379
REDIS_DB=0

# === PERFORMANCE TUNING ===
# High-frequency trading optimizations
SIGNAL_GENERATION_INTERVAL=30
MIN_SIGNAL_INTERVAL=15
ORDER_TIMEOUT=5
SLIPPAGE_TOLERANCE=0.0005

# === SAFETY LIMITS ===
# Daily risk management
MAX_DAILY_DRAWDOWN=0.15
MAX_POSITION_RISK=0.08
MAX_CORRELATION_EXPOSURE=0.30
MAX_MARGIN_USAGE=0.70

# === SCALPING SPECIFIC ===
# Target trading parameters
TARGET_TRADES_PER_DAY=22
MIN_TRADES_PER_DAY=15
MAX_TRADES_PER_DAY=35

# Signal thresholds
CORRELATION_THRESHOLD=0.08
DEVIATION_THRESHOLD=0.12
CONFIDENCE_THRESHOLD=0.60