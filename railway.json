{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --no-cache-dir -r requirements.txt",
    "watchPatterns": ["**/*.py", "requirements.txt", ".env"]
  },
  "deploy": {
    "startCommand": "python -u main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "numReplicas": 1,
    "region": "us-west1"
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO",
        "DEBUG": "false",
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": ".",
        "PORT": "8080",
        "HEALTH_CHECK_PORT": "8080",
        "RISK_PER_TRADE": "0.15",
        "DEFAULT_LEVERAGE": "8.5",
        "MAX_LEVERAGE": "10",
        "MIN_LEVERAGE": "8",
        "MAX_CONCURRENT_POSITIONS": "1",
        "STOP_LOSS_PERCENT": "0.012",
        "TAKE_PROFIT_RATIO": "1.5",
        "BINANCE_TESTNET": "false",
        "TZ": "UTC"
      }
    },
    "staging": {
      "variables": {
        "ENVIRONMENT": "staging",
        "LOG_LEVEL": "DEBUG",
        "BINANCE_TESTNET": "true",
        "RISK_PER_TRADE": "0.20",
        "DEFAULT_LEVERAGE": "5",
        "MAX_CONCURRENT_POSITIONS": "1"
      }
    }
  },
  "monitoring": {
    "alerts": {
      "deployment": true,
      "memory": {
        "enabled": true,
        "threshold": 85
      },
      "cpu": {
        "enabled": true,
        "threshold": 80
      },
      "errors": true,
      "healthcheck": {
        "enabled": true,
        "failureThreshold": 3
      }
    },
    "metrics": {
      "enabled": true,
      "retention": "14d",
      "customMetrics": [
        "/metrics",
        "/health/detailed"
      ]
    },
    "logging": {
      "level": "info",
      "retention": "7d",
      "structured": true
    }
  },
  "cron": [],
  "services": {
    "web": {
      "healthcheckPath": "/health",
      "healthcheckTimeout": 60,
      "port": 8080
    }
  }
}