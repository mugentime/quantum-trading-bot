# Railway Production Environment Configuration
# Quantum Trading Bot - Production Deployment

# Core Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
TRADING_MODE=live
PYTHON_VERSION=3.11

# Trading Parameters
RISK_LEVEL=conservative
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=3.0
MAX_OPEN_POSITIONS=5
CORRELATION_THRESHOLD=0.7
SIGNAL_CONFIDENCE_MIN=0.65

# Binance Configuration
BINANCE_TESTNET=false
BINANCE_API_KEY=${BINANCE_API_KEY}
BINANCE_SECRET_KEY=${BINANCE_SECRET_KEY}

# Trading Pairs (10 main pairs)
TRADING_PAIRS=BTCUSDT,ETHUSDT,SOLUSDT,ADAUSDT,DOTUSDT,LINKUSDT,MATICUSDT,AVAXUSDT,ATOMUSDT,LTCUSDT

# Risk Management
MAX_DAILY_LOSS=5.0
MAX_DRAWDOWN=10.0
POSITION_SIZE_PERCENTAGE=0.02
LEVERAGE_LIMIT=1.0

# Performance Tracking
PERFORMANCE_TRACKING=true
ANALYTICS_ENABLED=true
FAILURE_ANALYSIS=true

# Telegram Notifications
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}
TELEGRAM_CHAT_ID=${TELEGRAM_CHAT_ID}
NOTIFICATION_LEVEL=critical

# Database Settings
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true

# Deployment Settings
DEPLOYMENT_ENV=railway
RESTART_POLICY=on-failure
MAX_RESTART_COUNT=5
GRACEFUL_SHUTDOWN_TIMEOUT=30

# Security
API_RATE_LIMIT=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=10
SSL_VERIFY=true

# Coordination System
HIVE_MIND_ENABLED=true
WORKER_COUNT=4
COORDINATION_MODE=strategic
CONSENSUS_ALGORITHM=majority
AUTO_SCALE=true